{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@atlascode/frontend-components": [
        "libs/frontend-components/src/index.ts"
      ],
      "@atlascode/frontend-hooks": ["libs/frontend-hooks/src/index.ts"],
      "@atlascode/frontend-jss-mixins": [
        "libs/frontend-jss-mixins/src/index.ts"
      ],
      "@atlascode/frontend-pages": ["libs/frontend-pages/src/index.ts"],
      "@atlascode/frontend-sections": ["libs/frontend-sections/src/index.ts"],
      "@atlascode/frontend-services": ["libs/frontend-services/src/index.ts"],
      "@atlascode/frontend-theme": ["libs/frontend-theme/src/index.ts"],
      "@atlascode/frontend-utility": ["libs/frontend-utility/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
